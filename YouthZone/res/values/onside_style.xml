<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <color name="custom_theme_color">#FFFFFF</color>
	<style name="OnsideTheme" parent="android:Theme.DeviceDefault.Light">
	    <item name="android:windowBackground">@color/custom_theme_color</item>
	    <item name="android:colorBackground">@color/custom_theme_color</item>
	</style>
    
    <style name="OnsideFont" parent="@android:style/TextAppearance">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#455560</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ProjectQuestion" parent="@android:style/TextAppearance">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#455560</item>
        <item name="android:textSize">26sp</item>
    </style>
    
    <style name="OnsideTextEntry" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#455560</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="OnsideButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/onside_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>
    
</resources>
